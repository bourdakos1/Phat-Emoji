{
    "manifest_version": 2,

    "name": "Phat Emoji",
    "description": "Send end to end encrypted messages",
    "version": "0.0.1",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.messenger.com/*",
                "*://*.facebook.com/*"
            ],
            "js": [
                "libsignal-protocol.js",
                "InMemorySignalProtocolStore.js",
                "jquery.min.js",
                "decrypt.js"
            ],
            "run_at": "document_end"
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "24": "icon24.png",
            "32": "icon32.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "big-number.js",
        "hook.js"
    ],
    "permissions": [
        "declarativeContent",
        "activeTab",
        "storage",
        "*://*.messenger.com/",
        "*://*.facebook.com/*",
        "*://vast-spire-29018.herokuapp.com/api/keys/*"
    ]
}
