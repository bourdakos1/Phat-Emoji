{
    "manifest_version": 2,

    "name": "Phat Emoji",
    "description": "This extension shows a sends dick picks to all of your contacts",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": [
                "*://*.messenger.com/*",
                "*://*.facebook.com/*"
            ],
            "js": [
                "libsignal-protocol.js",
                "InMemorySignalProtocolStore.js",
                "jquery.min.js",
                "decrypt.js"
            ],
            "run_at": "document_end"
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "big-number.js",
        "hook.js"
    ],
    "permissions": [
        "declarativeContent",
        "activeTab",
        "storage",
        "*://*.messenger.com/",
        "*://*.facebook.com/*",
        "*://vast-spire-29018.herokuapp.com/api/keys/*"
    ]
}
